<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/card_view_category_one">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="5dp"


           >
           <TextView
               android:id="@+id/text_View1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="General Test : "
               android:gravity="left"
               android:textSize="30sp"
               android:textColor="#000"
               />
           <Button
               android:id="@+id/btn_category_one"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Start"
              android:layout_gravity="right"
               android:backgroundColor="#388E3C"

               />

           </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_category_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/card_view_category_one"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/text_View2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:gravity="left"
                android:textSize="30sp"
                android:textColor="#000"
                />
            <Button
                android:id="@+id/btn_category_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:layout_gravity="right"


                />






        </LinearLayout>




    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_category_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/card_view_category_two"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/text_View3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:gravity="left"
                android:textSize="30sp"
                android:textColor="#000"
                />
            <Button
                android:id="@+id/btn_category_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="start"
                android:layout_gravity="right"


                />






        </LinearLayout>




    </android.support.v7.widget.CardView>

























</RelativeLayout>