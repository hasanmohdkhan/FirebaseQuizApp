<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hasanzian.simpletest.MainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />


    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        tools:ignore="NotSibling">


        <RadioButton
            android:id="@+id/OptionDdisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/OptionBdisplay"
            android:layout_alignStart="@+id/OptionBdisplay"
            android:layout_below="@+id/OptionBdisplay"
            android:layout_marginTop="29dp"
            android:text=""
            tools:ignore="ObsoleteLayoutParam" />

        <RadioButton
            android:id="@+id/OptionCdisplay"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/OptionAdisplay"
            android:layout_alignStart="@+id/OptionAdisplay"
            android:layout_below="@+id/OptionAdisplay"
            android:layout_marginTop="27dp"
            tools:ignore="ObsoleteLayoutParam" />

        <RadioButton
            android:id="@+id/OptionBdisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/OptionCdisplay"
            android:layout_alignStart="@+id/OptionCdisplay"
            android:layout_below="@+id/OptionCdisplay"
            android:layout_marginTop="30dp"
            android:text=""
            tools:ignore="ObsoleteLayoutParam" />

        <RadioButton
            android:id="@+id/OptionAdisplay"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TextView"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="34dp"
            android:text="" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <Button
            android:id="@+id/nextButton"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCount"
            android:layout_marginTop="11dp"
            android:text="Next" />

        <TextView
            android:id="@+id/textCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/OptionDdisplay"
            android:layout_marginTop="34dp"
            android:text="Please Wait.....Loading"
            android:textSize="24sp" />

    </RadioGroup>


</RelativeLayout>